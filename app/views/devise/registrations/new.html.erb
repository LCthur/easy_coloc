<div class="containe">
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-sm-offset-4 mx-auto">
      <div class="sign-up">
        <h2>S'enregistrer</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="d-flex justify-content-between">
            <%= f.input :first_name, placeholder: 'Alan', class: "mr-3", label: "Prénom" %>
            <%= f.input :last_name, placeholder: 'Turing', class: "ml-3", label: "Nom" %>
          </div>
          <%= f.input :email, required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder: 'alan.turing@enigma.com'%>

          <%= f.input :password,
                      label: "Mot de passe",
                      required: true,
                      hint: ("#{@minimum_password_length} charactères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" },
                      placeholder: '••••••••••••'

                      %>

          <%= f.input :password_confirmation,
                      label: "Confirmation du mot de passe",
                      required: true,
                      input_html: { autocomplete: "new-password" },
                      placeholder: '••••••••••••' %>
          <%= f.input :avatar_photo, required: true, as: :file %>
          <%= f.input :avatar_photo_cache, as: :hidden %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "S'enregistrer", class: "btn-signup" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="grid">
  <% issues.each do |issue| %>
  <% if issue.assignment.done_state == false %>
  <div class="issue-parent-card m-3">
    <div class="issue-image-container">
      <%= cl_image_tag issue.photo, class: "issue-image", gravity: :center %>
    </div>
    <div class="info-issue-recap">
      <h3 class="title"><%= issue.assignment.task.name %></h3>
      <p class="text"><%= issue.description %></p>
      <span class="author">Cr√©e par: <%= full_name(issue.user.first_name, issue.user.last_name) %></span>
    </div>
    <div class="accept-deal">
      <%= link_to "Fait", issue_done_path(issue.assignment), :method => :patch, class: "btn btn-accepter text-center w-100" %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>

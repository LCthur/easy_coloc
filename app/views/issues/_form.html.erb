<%= simple_form_for([assignment, issue]) do |f| %>

<div class="form-group px-3">
  <%= f.input :description, required: true, label: 'Description:', as: :text %>
</div>
<div class="d-flex justify-content-between align-items-center">
  <div class="form-group px-3">
    <%= f.input :photo, required: false, as: :file, label: 'Image:'%>
    <%= f.input :photo_cache, as: :hidden %>
  </div>
  <div class="px-3">
    <%= f.button :submit, value: "Raise", class: "btn btn-primary mb-3" %>
  </div>
</div>

<% end %>

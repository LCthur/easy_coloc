<h1 id="colocation-title">Colocation : <%= @flat.name %></h1>
<div class="tasks">
  <div class="task fade-in-left">
    <div class="task-title">
      <h2>Todo</h2>
    </div>
      <h2 class="task-subtitle">Today</h2>
    <div class="todo">
      <%= render 'flats/delayed', flat: @flat  %>
      <%= render 'flats/today', flat: @flat %>
      <%= render 'flats/todo',    flat: @flat  %>    
    </div>
  </div>
  <div class="task fade-in-left done-column">
    <div class="task-title">
      <h2>Done</h2>
    </div>
    <div class="done">
      <%= render 'flats/done', flat: @flat %>
    </div>
  </div>
</div>

<h1><%= @flat.name %></h1>
<div class="tasks">
    <div class="task">
        <div class="task-title">
            <h2>Todo</h2>
        </div>
        <% @flat.assignments.each do |assignement| %>    
            <div class="card-task">
                <img class="avatar-large" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
                    <div class="card-task-info">
                        <h2><%= assignement.user.first_name %></h2>
                        <p><%= assignement.task.name %></p>
                    </div> 
            </div>
        <% end %>
    </div>
    <div class="task">
        <div class="task-title">
            <h2>Done</h2>
        </div>
        <div class="card-task">

        </div>
    </div>
</div>